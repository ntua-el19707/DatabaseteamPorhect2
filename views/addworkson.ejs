<!DOCTYPE html>
<html lang="en">

	<head>
		<meta charset="utf-8">
			<meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
				<title>
					<%= pageTitle %>
				</title>
				<link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.min.css">
					<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Bungee">
						<link rel="stylesheet" href="/assets/fonts/font-awesome.min.css">
							<link rel="stylesheet" href="/assets/css/MUSA_panel-table-1.css">
								<link rel="stylesheet" href="/assets/css/MUSA_panel-table.css">
									<link rel="stylesheet" href="/assets/css/styles-1.css">
										<link rel="stylesheet" href="/assets/css/styles.css">
											<link rel="stylesheet" href="/assets/css/untitled.css">
</head>

	<body>
		<div id="navigation-block">
			<nav class="navbar navbar-light navbar-expand-md">
				<div class="container-fluid">
					<a class="navbar-brand" style="font-family:Bungee, cursive;" href="#">elidek</a>
					<button data-bs-toggle="collapse" class="navbar-toggler" data-bs-target="#navcol-1">
						<span class="visually-hidden">Toggle navigation</span>
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="navcol-1">
						<ul class="navbar-nav">
							<li class="nav-item">
								<a class="nav-link active" href=/>Home</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href=/Researcher>Researcher_menu</a>
							</li>
							<li class="nav-item"></li>
							<li class="nav-item"></li>
						</ul>
						<ul class="navbar-nav ms-auto">
							<li class="nav-item"></li>
							<li class="nav-item"></li>
						</ul>
					</div>
				</div>
			</nav>
		</div>
		<div class="container py-5">
			<div class="row">
				<div class="col-lg-7 mx-auto bg-white rounded shadow">

					<!-- Fixed header table-->
					<div class="table-responsive">
						<table class="table table-fixed">
							<thead>
								<tr>
									<th scope="col" class="col-3">worker id</th>
									<th scope="col" class="col-3">Project </th>
								</tr>
							</thead>										
							<tbody>
								<%   work.forEach((i, _) => { %>
								<tr>
									<th scope="row" class="col-3">
										<%= i.worker_id%>
									</th>
									<th class="col-3">
										<%= i.project_title%>
									</th>
									<form method="POST" action="/Researcher/addworkson/delete/<%= i.worker_id%>/<%= i.project_title %>">
										<td>
											<button style="all: unset; cursor: pointer;" type="submit">
												<i class="fa fa-trash"></i>
											</button>
										</td>
									</form>
								</tr>
								<% }) %>


							</tbody>
						</table>
					</div>
					<!-- End -->

				</div>
			</div>
		</div>
		<div class="container">
			<div class="row" id="row">
				<div class="col-md-12">
					<h1>Worker works on project</h1>
				    			
					<form class="form-horizontal" name="student-form" action="/Researcher/addworkson/add" method="POST">
						<select name = "Workerid" id="Workerid">
							<option selected="" disabled="">Choose Worker</option>
							<% workers.forEach((i, _) => {%>
								<option value = "<%=i.Researher_id %>"> <%=i.Researher_id%> <%= i.name%> <%=i.Surname%> <%=i.Sex%></option>
							<% }) %>
						</select>
				    	</br>
						<select name = "tittle" id="tittle">
							<option selected="" disabled="">Choose Project</option>
							<% projects.forEach((i, _) => {%>
								<option value = "<%=i.Title %>"> <%=i.Title%></option>
							<% }) %>
						</select>
						
					    </br>
						<button type="submit" class="btn btn-primary btn-submit-custom">Submit</button>
						

					</form>

				</div>
			</div>
			
					<script src="/assets/bootstrap/js/bootstrap.min.js"></script>
					<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
					<script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
					<script src="/assets/js/Bootstrap-DataTables.js"></script>
				</body>

</html>